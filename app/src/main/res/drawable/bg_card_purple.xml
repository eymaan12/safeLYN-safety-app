<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#F5E6FD"
        android:endColor="#DCB0E9"
          android:angle="90" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/purple_dark" />

    <!-- Rounded Corners -->
    <corners android:radius="20dp" />

    <!-- Internal Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
