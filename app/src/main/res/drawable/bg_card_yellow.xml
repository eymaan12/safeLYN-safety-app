<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#FFF9C4"
    android:endColor="#F8AF55"
    android:angle="90" />

    <!-- Optional Border -->
    <stroke
        android:width="2dp"
        android:color="@color/yellow_dark" />

    <!-- Rounded Corners -->
    <corners android:radius="20dp" />

    <!-- Internal Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
