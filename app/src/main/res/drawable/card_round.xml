<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#C7FFD9"
        android:endColor="#7BD6A0"
        android:angle="90" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="@color/green_dark" />

    <!-- Rounded Corners -->
    <corners android:radius="16dp" />

    <!-- Padding inside -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>

