<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="#E91E63"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_info"
                app:tint="#FFFFFF"
                android:background="@drawable/circle_white_alpha"
                android:padding="6dp"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Safety Guide"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/btnCloseGuide"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                app:tint="#FFFFFF"
                android:background="@drawable/circle_white_alpha"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Close Safety Guide"/>
        </LinearLayout>

        <include layout="@layout/item_safety_guide_row"
            android:id="@+id/guideLoc" />

        <include layout="@layout/item_safety_guide_row"
            android:id="@+id/guideVis"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/item_safety_guide_row"
            android:id="@+id/guideNoise"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/item_safety_guide_row"
            android:id="@+id/guideCall"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnGotIt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Got It"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>