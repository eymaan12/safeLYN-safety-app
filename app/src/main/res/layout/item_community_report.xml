<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <FrameLayout
            android:id="@+id/riskBackground"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#FF3B30"
            android:layout_marginEnd="12dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgRiskIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_dialog_alert"
                android:contentDescription="Risk Icon"
                app:tint="@android:color/white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description &amp; Location"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtRisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Risk"
                    android:textColor="#C62828"
                    android:background="#FFF2F2"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnResolve"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF3B30"
                android:textColor="@android:color/white"
                android:text="Mark as Resolved"
                android:textSize="12sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>